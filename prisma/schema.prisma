generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Coach {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id                  Int                 @id @default(autoincrement())
  name                String
  username            String              @unique
  email               String              @unique
  number              String
  password            String
  position            Position
  availability_status Availability_Status @default(PENDING)
  teams               Team[]

  @@index([name])
}

model Team {
  id      Int      @id @default(autoincrement())
  name    String
  players Player[]
  events  Event[]
}

model Event {
  id         Int        @id @default(autoincrement())
  title      String
  event_type Event_Type
  date       String
  start_time String
  end_time   String
  location   String
  details    String
  Team       Team?      @relation(fields: [teamId], references: [id])
  teamId     Int?

  @@index([teamId])
}

enum Event_Type {
  PRACTICE
  MATCH
  OTHER
}

enum Availability_Status {
  PENDING
  GOING
  NOT_GOING
}

enum Position {
  GOAL_KEEPER
  FULL_BACK_RIGHT
  FULL_BACK_LEFT
  CENTRE_BACK
  SWEEPER
  DEFENSIVE_MIDFIELD_RIGHT
  DEFENSIVE_MIDFIELD_LEFT
  SECOND_STRIKER
  CENTRE_FORWARD
}
